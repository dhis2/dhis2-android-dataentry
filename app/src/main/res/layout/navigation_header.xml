<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@color/color_primary"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/keyline_default"
    android:paddingLeft="@dimen/keyline_default"
    android:paddingRight="@dimen/keyline_default"
    android:paddingTop="104dp">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="@dimen/keyline_default"
        android:layout_marginRight="@dimen/keyline_default">

        <org.hisp.dhis.android.dataentry.commons.ui.CircleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:circle_radius="@dimen/navigation_avatar_radius"
            app:fill_color="@android:color/white"/>

        <org.hisp.dhis.android.dataentry.commons.ui.FontTextView
            android:id="@+id/textview_username_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/color_accent"
            android:textSize="24sp"
            app:font="@string/font_name_medium"
            tools:text="JW"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <org.hisp.dhis.android.dataentry.commons.ui.FontTextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            app:font="@string/font_name_medium"
            tools:text="John Watson"/>

        <org.hisp.dhis.android.dataentry.commons.ui.FontTextView
            android:id="@+id/textview_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/color_white_transparent"
            android:textSize="@dimen/text_size_small"
            app:font="@string/font_name_regular"
            tools:text="Updated 3 mins ago"/>

    </LinearLayout>

</LinearLayout>